<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E0D5"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/roll_btn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FA9A9A"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/roll"
        app:layout_constraintBottom_toTopOf="@+id/activity_main__tv_rules"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main__tv_title" />

    <TextView
        android:id="@+id/activity_main__tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/guess_the_secret_number"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/roll_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/activity_main__tv_rules"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="#D9A7B0"
        android:fontFamily="sans-serif-black"
        android:text="@string/rules"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roll_btn" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="147dp"
        android:layout_height="211dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_main__tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dices" />

</androidx.constraintlayout.widget.ConstraintLayout>